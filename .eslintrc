{
    "extends": ["plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "rules": {
        "indent": [2, 4],
        "comma-dangle": [2, "never"],
        "complexity": [1, 9],
        "func-names": 0,
        "import/prefer-default-export": 0,
        "no-console": 0,
        "no-unused-vars": 0,
        "no-undef": 0,
        "object-curly-newline": [
            1,
            {
                "multiline": true
            }
        ],
        "object-shorthand": 0,
        "prettier/prettier": "error",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ]
    }
}
